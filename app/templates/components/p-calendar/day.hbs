<div class="day-wrapper">
  <div class="day-identifiers">
    <span class="day-name">
      <span class="full">{{dayNameFull}}</span>
      <span class="short">{{dayNameShort}}</span>
    </span>
    <div class="month-holder">
      <span class="month-name {{lowercase monthName}}">{{displayMonthName}}</span>
    </div>
    <span class="mday">{{mDay}}</span>
  </div>
  {{#if (and (or (eq mDay '22') (eq mDay '15')) (eq monthName 'Jul'))}}
    <div class="announcement">These ones are in Lead, South Dakota!</div>
  {{/if}}
  <ul class="day-content show-count-{{shows.length}}">
    {{#each shows as |show i|}}
      {{#if (and (eq i 0) (eq show.time '8p'))}}
        <div class="spacer"></div>
      {{/if}}
      <li class="showing
        {{if (eq show.time '10a') 'morning'}}
        {{if (eq show.time '2p') 'matinee'}}
        {{if (eq show.time '8p') 'evening'}}
        show-{{show.id}}">
        <span class="show-time">{{#if (or (eq show.id 6) (eq show.id 7))}}7p{{else}}{{show.time}}{{/if}}</span>
        <span class="show-title">{{show.title}}</span>
      </li>
    {{/each}}
  </ul>
</div>

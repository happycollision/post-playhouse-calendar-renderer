<td class="day day-{{mDay}}" valign="top">
  <div class="day-identifiers">
    <span class="day-name">
      <span class="full">{{dayNameFull}}</span>
    </span>
    <div class="month-holder">
      <span class="month-name {{firstOfMonthIdentifier}}">{{monthName}}</span>
    </div>
    <span class="mday">{{mDay}}</span>
  </div>
  <div class="day-content show-count-{{shows.length}}">
    {{#each shows as |show i|}}
      {{#if (and (eq i 0) (eq show.time '8p'))}}
        <div class="spacer"></div>
      {{/if}}
      <div class="showing evening show-{{add i 1}}">
        <span class="show-title">{{show.title}}</span>
        <span class="show-time">{{show.time}}</span>
      </div>
    {{/each}}
  </div>
</td>
